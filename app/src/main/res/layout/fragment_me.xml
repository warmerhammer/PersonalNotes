<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?actionBarSize"
    android:orientation="vertical"
    tools:context=".MeFragment.MeFragment">

    <LinearLayout
        android:id="@+id/memory_used_ll"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="top"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/memory_used_pb"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:progress="25"
            android:progressBackgroundTint="@color/light_grey"
            android:progressTint="@color/secondary_yellow" />

        <TextView
            android:id="@+id/mb_remaining_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/cabin_sketch"
            android:textAlignment="textStart"
            android:textColor="@color/pencil_grey"
            android:textSize="12sp"
            tools:text="mb/mb" />
    </LinearLayout>

    <Button
        android:id="@+id/button_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/cabin_sketch"
        android:text="Password"
        android:textAlignment="textEnd"
        android:textColor="#0000FF"
        android:textSize="20dp" />

    <View
        android:layout_marginHorizontal="15dp"
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey" />

    <Button
        android:id="@+id/button_UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/cabin_sketch"
        android:text="Username"
        android:textAlignment="textEnd"
        android:textColor="#0000FF"
        android:textSize="20dp" />

    <View
        android:layout_marginHorizontal="15dp"
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey" />


    <Button
        android:id="@+id/button_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/cabin_sketch"
        android:text="Email"
        android:textAlignment="textEnd"
        android:textColor="#0000FF"
        android:textSize="20dp" />

    <View
        android:layout_marginHorizontal="15dp"
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey" />

    <Button
        android:id="@+id/button_Notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/cabin_sketch"
        android:text="Notifications"
        android:textAlignment="textEnd"
        android:textColor="#0000FF"
        android:textSize="20dp" />

    <View
        android:layout_marginHorizontal="15dp"
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey" />

    <LinearLayout
        android:id="@+id/ll_Trash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/outline_folder_delete_24"
            app:tint="@color/holo_red"
            android:alpha=".6"/>

        <Button
            android:id="@+id/button_Trash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:fontFamily="@font/cabin_sketch"
            android:background="@android:color/transparent"
            android:text="Trash"
            android:textAlignment="textEnd"
            android:textColor="@color/holo_red"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>