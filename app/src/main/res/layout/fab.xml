<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/fab_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="44dp"
        android:clipChildren="false"
        android:tag="fab_container">

        <LinearLayout
            android:id="@+id/fab_action_3_ll"
            android:layout_width="@dimen/fab_ll_width"
            android:layout_height="@dimen/fab_ll_height"
            android:layout_above="@+id/fab_action_2_ll"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="@dimen/fab_margin"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/fab_action_3_instructions_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:layout_weight="90"
                android:background="#e4e7ee"
                android:fontFamily="@font/cabin_sketch"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/new_project"
                android:textColor="@color/pencil_black"
                android:textStyle="bold" />


            <FrameLayout
                android:id="@+id/fab_action_3_frame"
                android:layout_width="@dimen/fab_layout_width"
                android:layout_height="@dimen/fab_layout_height"
                android:background="@drawable/fab_background">


                <ImageButton
                    android:id="@+id/fab_action_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/add_folder_outline"
                    app:tint="@color/white" />
            </FrameLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/fab_action_2_ll"
            android:layout_width="@dimen/fab_ll_width"
            android:layout_height="@dimen/fab_ll_height"
            android:layout_above="@+id/fab_action_1_ll"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="@dimen/fab_margin"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/main_fab_button"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fab_action_2_instructions_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:layout_weight="90"
                android:background="@color/black"
                android:fontFamily="@font/cabin_sketch"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/new_list"
                android:textColor="@color/white"
                android:textStyle="bold" />


            <FrameLayout
                android:id="@+id/fab_action_2_frame"
                android:layout_width="@dimen/fab_layout_width"
                android:layout_height="@dimen/fab_layout_height"
                android:background="@drawable/fab_background">

                <ImageButton
                    android:id="@+id/fab_action_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_checklist_24"
                    app:tint="@color/white" />
            </FrameLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/fab_action_1_ll"
            android:layout_width="@dimen/fab_ll_width"
            android:layout_height="@dimen/fab_ll_height"
            android:layout_above="@id/main_fab_button"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="@dimen/fab_margin"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="@dimen/fab_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fab_action_1_instructions_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:layout_weight="90"
                android:background="@color/black"
                android:fontFamily="@font/cabin_sketch"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/new_note"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/fab_action_1_frame"
                android:layout_width="@dimen/fab_layout_width"
                android:layout_height="@dimen/fab_layout_height"
                android:background="@drawable/fab_background">

                <ImageButton
                    android:id="@+id/fab_action_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_edit_note_24"
                    app:tint="@color/white" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/new_note_message"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@id/main_fab_button"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginEnd="25dp"
            android:layout_toStartOf="@+id/main_fab_button"
            android:orientation="horizontal">

            <TextView
                android:layout_width="192dp"
                android:layout_height="61dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/cabin_sketch"
                android:text="@string/no_projects"
                android:textAlignment="center"
                android:textColor="@color/pencil_black"
                android:textSize="22sp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:backgroundTint="@color/pencil_black"
                android:contentDescription="@string/down_arrow"
                android:src="@drawable/baseline_arrow_right_alt_24"
                app:tint="@color/pencil_black" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/main_fab_button"
            android:layout_width="@dimen/fab_layout_width"
            android:layout_height="@dimen/fab_layout_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/fab_background_highlighted"
            android:gravity="bottom"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/fab_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:contentDescription="@null"
                android:src="@drawable/sharp_add_24"
                app:tint="@color/white" />
        </FrameLayout>

    </RelativeLayout>
</merge>