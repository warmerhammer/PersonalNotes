<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/fab_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:clipChildren="false"
        android:tag="fab_container">

        <LinearLayout
            android:id="@+id/fab_action_3_ll"
            android:layout_width="@dimen/fab_ll_width"
            android:layout_height="@dimen/fab_ll_height"
            android:layout_above="@+id/fab_action_2_ll"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/fab_margin"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/fab_action_3_instructions_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:layout_weight="90"
                android:background="#e4e7ee"
                android:fontFamily="@font/cabin_sketch"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/new_project"
                android:textColor="@color/pencil_black"
                android:textStyle="bold"
                />


            <FrameLayout
                android:id="@+id/fab_action_3_frame"
                android:layout_width="@dimen/fab_layout_width"
                android:layout_height="@dimen/fab_layout_height"
                android:background="@drawable/fab_background">

                <ImageButton
                    android:id="@+id/fab_action_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/add_folder_outline"
                    app:tint = "@color/white"
                    />
            </FrameLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/fab_action_2_ll"
            android:layout_width="@dimen/fab_ll_width"
            android:layout_height="@dimen/fab_ll_height"
            android:layout_above="@+id/fab_action_1_ll"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/fab_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fab_action_2_instructions_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:layout_weight="90"
                android:background="#e4e7ee"
                android:fontFamily="@font/cabin_sketch"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/new_list"
                android:textColor="@color/pencil_black"
                android:textStyle="bold" />


            <FrameLayout
                android:id="@+id/fab_action_2_frame"
                android:layout_width="@dimen/fab_layout_width"
                android:layout_height="@dimen/fab_layout_height"
                android:background="@drawable/fab_background">

                <ImageButton
                    android:id="@+id/fab_action_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/to_do_list_sketch_pencil"
                    app:tint  = "@color/white"
                    />
            </FrameLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/fab_action_1_ll"
            android:layout_width="@dimen/fab_ll_width"
            android:layout_height="@dimen/fab_ll_height"
            android:layout_above="@id/fab_frame"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/fab_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fab_action_1_instructions_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:layout_weight="90"
                android:background="#e4e7ee"
                android:fontFamily="@font/cabin_sketch"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/new_note"
                android:textColor="@color/pencil_black"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/fab_action_1_frame"
                android:layout_width="@dimen/fab_layout_width"
                android:layout_height="@dimen/fab_layout_height"
                android:background="@drawable/fab_background">

                <ImageButton
                    android:id="@+id/fab_action_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/clipboard_sketch_outline"
                    app:tint="@color/white" />
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fab_frame"
            android:layout_width="@dimen/fab_layout_width"
            android:layout_height="@dimen/fab_layout_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/fab_margin"
            android:background="@drawable/fab_background">

            <ImageButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:scaleX=".75"
                android:scaleY=".75"
                android:src="@drawable/plus_sketch"
                app:tint="@color/white"
                />
        </FrameLayout>

    </RelativeLayout>
</merge>